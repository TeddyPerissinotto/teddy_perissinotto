<div class="project-section">
    
    <h1>Mes projets</h1>
    
    {% for project in projects %}
        <article>
            
            <div class="project-thumbnail">
                <h2>{{ project.name }}</h2>
                <div class="project-image-thumbnail">
                    <img src="{{ asset('assets/img') }}/{{ project.image1 }}" alt="" class="imgFluid">
                </div>
            </div>

            <div class="project-modal">
                <h2>{{ project.name }}</h2>

                <div class="project-description">
                    <p>{{ project.description }}</p>
                </div>

                <div class="project-images-block">

                    <div class="project-image">
                        <img src="{{ asset('assets/img') }}/{{ project.image1 }}" class="imgFluid" alt="">
                    </div>

                    <div class="project-image">
